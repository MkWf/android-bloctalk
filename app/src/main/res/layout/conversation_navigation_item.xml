<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/list_selector">

    <ImageView
        android:id="@+id/conversation_navigation_item_circle"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:src="@mipmap/conversation_item_cricle"/>

    <ImageView
        android:id="@+id/conversation_navigation_item_image"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="27dp"
        android:background="#FF0000"
        android:src="@mipmap/conversation_item_user"/>

    <TextView
        android:id="@+id/conversation_navigation_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/conversation_navigation_item_circle"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>